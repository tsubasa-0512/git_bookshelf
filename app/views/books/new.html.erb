<div class="row-form">
    <%= form_for @book do |f| %>
    <h2>書籍追加フォーム</h2>
    <div class="form-group">
     <div class="form-label">
        <%= f.label :タイトル %>
     </div>
        <%= f.text_field :title, :required => true %>
    </div>
    <div class="form-select-group">
     <div class="form-label">
        <%= f.label :ジャンル %>
     </div>
        <%= f.collection_select(:genre_id, Genre.all,:id, :genre, {:include_blank => true}, {class: "form-select"}) %>
    </div>
    <div class="form-group">
     <div class="form-label">
        <%= f.label :著者 %>
     </div>
        <%= f.text_field :author %>
    </div>
    <%= f.submit value="追加",class: "btn" %>
<% end %>
</div>
